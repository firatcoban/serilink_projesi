    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body { background: #0f172a; color: white; font-family: 'Poppins', sans-serif; padding: 40px; }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 20px; }
        h1 { margin: 0; background: linear-gradient(to right, #FFD700, #FF5400); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
        
        .nav-links a { color: #aaa; text-decoration: none; margin-left: 20px; font-weight: bold; transition: 0.3s; }
        .nav-links a:hover { color: white; }
        .logout-btn { color: #ff4444 !important; }

        .container { display: flex; gap: 40px; flex-wrap: wrap; }
        
        .panel-list { flex: 2; min-width: 300px; }
        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px; }
        
        .card { 
            background: rgba(30, 41, 59, 0.6); border: 1px solid rgba(255,255,255,0.1); 
            border-radius: 15px; padding: 20px; text-align: center; position: relative; transition: 0.3s;
        }
        .card:hover { transform: translateY(-5px); border-color: #FF5400; }
        
        .card img { width: 80px; height: 80px; border-radius: 50%; object-fit: cover; margin-bottom: 10px; border: 2px solid #FFD700; }
        .card h3 { margin: 0 0 5px 0; font-size: 18px; }
        .card span { font-size: 12px; color: #aaa; }
        
        .manage-btn { 
            display: block; margin-top: 15px; background: #FF5400; color: white; 
            text-decoration: none; padding: 8px; border-radius: 8px; font-weight: bold; 
        }
        
        .delete-btn { position: absolute; top: 10px; right: 10px; color: #ff4444; }

        .add-box { 
            flex: 1; min-width: 250px; max-width: 350px; 
            background: rgba(255,255,255,0.05); padding: 25px; border-radius: 15px; height: fit-content; 
        }
        input { width: 100%; padding: 10px; margin-bottom: 10px; background: rgba(0,0,0,0.2); border: 1px solid #444; border-radius: 5px; color: white; }
        button { width: 100%; padding: 10px; background: #28a745; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer; }
    </style>
</head>
