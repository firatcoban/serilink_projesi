        <% users.forEach(user => { %>
            <a href="/admin/<%= user.username %>" class="user-card">
                <img src="<%= user.resim_url %>" class="user-img">
                <div class="user-name"><%= user.ad_soyad %></div>
                <div class="user-role">Panele Git ðŸ‘‰</div>
            </a>
        <% }); %>
    </div>

</body>
</html>